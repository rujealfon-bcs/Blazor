@page "/"

<section class="page-index">
    <MatTabGroup>
        <MatTab Label="Vendor - Cost Code">
            <h1>Vendor - Cost Code</h1>
            <p class="description">
                Below grid shows valid Business Craft Vendor Category and relevant cost codes mapped to them
                based on Business Unit. Administrator can adjust the Cost as necessary, which will reflect in
                <a href="#">Click Home</a> the next day after the Vendor Integration run that night.
            </p>

            <div class="dialog-button">
                <MatButton Icon="add" OnClick="@OpenDialog" Raised="true">Add New Record</MatButton>
            </div>

            <div class="show-items-entries">
                <div class="show-items">
                    Showing 1-10 of 1,000 items
                </div>
                <div class="show-entries">
                    Show
                    <div class="select-wrapper">
                        <select class="custom-select">
                            <option selected value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </div>
                    entries
                </div>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Vendor Category</th>
                        <th>sg Cost Code</th>
                        <th>Business Unit</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <MatTextField Class="mdc-text-field-funnel-icon" @bind-Value="@myStringValue" Label="Type Something ..."></MatTextField>
                        </td>
                        <td><MatTextField Class="mdc-text-field-funnel-icon" @bind-Value="@myStringValue2" Label="Type Something ..."></MatTextField></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Mark</td>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>
                            <a href="#">Edit</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Jacob</td>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>
                            <a href="#">Edit</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Larry</td>
                        <td>Larry</td>
                        <td>the Bird</td>
                        <td><a href="#">Edit</a></td>
                    </tr>
                </tbody>
            </table>

            <BlazorApp.Shared.Components.Pagination></BlazorApp.Shared.Components.Pagination>
        </MatTab>
    </MatTabGroup>

    <MatDialog @bind-IsOpen="@dialogIsOpen" CanBeClosed="false">
        <MatDialogTitle>Add New Record</MatDialogTitle>
        <MatDialogContent>
            <div class="form-field">
                <MatTextField @bind-Value="@vendorCategory" Label="Vendor Category"></MatTextField>
            </div>
            <div class="form-field">
                <MatTextField @bind-Value="@costCode" Label="sg Cost Code"></MatTextField>
            </div>
            <div class="form-field">
                <MatTextField @bind-Value="@businessUnit" Label="Business Unit"></MatTextField>
            </div>
        </MatDialogContent>
        <MatDialogActions>
            <MatButton Class="btn-cancel" OnClick="@(e => { dialogIsOpen = false; })">Cancel</MatButton>
            <MatButton Class="btn-save">Save</MatButton>
        </MatDialogActions>
    </MatDialog>
</section>

@code
{
    string myStringValue;
    string myStringValue2;

    bool dialogIsOpen = false;
    string vendorCategory = null;
    string costCode = null;
    string businessUnit = null;

    void OpenDialog()
    {
        dialogIsOpen = true;
    }
}